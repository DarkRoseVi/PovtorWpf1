<Page x:Class="VolonterWpf.Pages.RequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VolonterWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RequestPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="349*"/>
            <RowDefinition Height="46*"/>
        </Grid.RowDefinitions>

        <ListView Grid.Row="1" Name="RequestLw">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <StackPanel  Grid.Row="1">
                            <TextBlock Text="ФИО"/>
                            <TextBlock Text="{Binding Request.Patient.FullName}"
                                       Width="100"
                                       Height="50"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" >
                            <TextBlock Text="Дата"/>
                            <TextBlock Text="{Binding Request.Date}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" >
                            <Button Content="Вызвать наряд"
                                   Height="20"
                                    Name="Btn"
                                    Click="Btn_Click"/>

                            <Button Content="Отказ"
                                  
                                    Height="20"
                                    Name="OtBtn"
                                    Click="OtBtn_Click"/>

                        </StackPanel>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
